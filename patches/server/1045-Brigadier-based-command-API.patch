+        registeredNode |= this.registerRedirect(literal, pluginMeta, pluginLiteral, description, true); // Plugin commands should override vanilla commands
+
+        // Add aliases
+        List<String> registeredAliases = new ArrayList<>();
+        for (String alias : aliases) {
+            if (registeredNode |= this.registerRedirect(alias, pluginMeta, pluginLiteral, description, false)) {
+                registeredAliases.add(alias);
+            }
+            if (registeredNode |= this.registerRedirect(identifier + ":" + alias, pluginMeta, pluginLiteral, description, false)) {
+                registeredAliases.add(identifier + ":" + alias);
+            }
